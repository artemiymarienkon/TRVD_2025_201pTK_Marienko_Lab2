<h1>Список статей</h1>
<ul>
  {{#articles}}
  <li>{{title}} — {{summary}}</li>
  {{/articles}}
</ul>

<h2>Додати статтю</h2>
<form action="/articles" method="POST">
  <input type="text" name="title" placeholder="Назва" required>
  <input type="text" name="summary" placeholder="Короткий опис" required>
  <textarea name="content" placeholder="Вміст" required></textarea>
  <button type="submit">Додати</button>
</form>

<a href="/">На головну</a>
